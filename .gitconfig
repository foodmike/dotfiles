[user]
	name = Mike Mahoney
	email = mike.mahoney@augmentir.com
[core]
	editor = vim
	autocrlf = input
	excludesfile = /Users/mike.mahoney/.gitstuff/.gitignore_global
	hooksPath = ~/.gitstuff/hooks
[branch]
	autosetuprebase = always
[push]
	default = simple
[diff]
    tool = mdiff
[difftool]
	prompt = false
[alias]
	last = log -l HEAD
	branches = branch --list
	br = branch
    st = status
    co = checkout
    type = cat-file -t
    dump = cat-file -p
    dev = checkout devel
    tags = tag -l
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    wipe = clean -fdx -e *.user -e *.suo
    wipen = clean -fdxn -e *.user -e *.suo  # Dry-run
    last = log --name-status -1 HEAD
    info = remote show origin
    dt = difftool
    log = log --name-status
    grab = !"git stash && git pull && git stash pop"

    # Pretty graph logging from http://stackoverflow.com/questions/1838873/visualizing-branch-topology-in-git/34467298#34467298

    gr = log --graph --decorate --all --date=short --format=format:'%C(bold magenta)%h%C(reset) %C(green)%an%C(dim green) [%cd]%C(reset)%C(auto)%d%C(reset): %C(white)%<(120,trunc)%s%C(reset)'
    lr = log         --decorate --all --date=short --format=format:'%C(bold magenta)%h%C(reset) %C(green)%<(20,trunc)%an%C(dim green) [%cd]%C(reset)%C(auto)%d%C(reset): %C(white)%<(120,trunc)%s%C(reset)'
    grd = !"git gr --simplify-by-decoration"

    lg = !"git lg1"
    lg1 = !"git lg1-specific --all"
    lg2 = !"git lg2-specific --all"
    lg3 = !"git lg3-specific --all"

    lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
    lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
